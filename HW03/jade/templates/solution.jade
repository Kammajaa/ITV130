#result(hidden)
    include logo

    audio#winSound
        source(src="audio/win.mp3" type="audio/mpeg")
    audio#lossSound
        source(src="audio/loss.mp3" type="audio/mpeg")

    .letters
        .letter-1.small W
        .letter-2.small I
        .letter-3.small N
        .letter-1.small !
        .letter-2.small !
        .letter-3.small !

    .letters(style="display: none;")
        .letter-1.small L
        .letter-2.small O
        .letter-3.small S
        .letter-1.small S
        .letter-2.small ...

    .result-block
        .background
            .result-info
                h2 Stats
                h3#name-1 player1 name 
                    span.winner (WINNER)
                span.label Time:
                span.info 500ms
                .clear
                span.label Wins:
                span.info 5
                .clear
                span.label Losses:
                span.info 2
                .clear
                h3#name-2 player1 name 
                    span.loss (loser)
                span.label Time:
                span.info 500ms
                .clear
                span.label Wins:
                span.info 5
                .clear
                span.label Losses:
                span.info 2
                .clear
            button#again-btn.btn Find opponent
