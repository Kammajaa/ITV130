.container
    h3.form-title TEATAJA
    .row
        .form-field.col-sm-6
            label Perekonnanimi*
            input(type="text")
        .form-field.col-sm-6
            label Eesnimi*
            input(type="text")
    .row
        .form-field.col-sm-6
            label Isikukood**
            input(type="text")
        .form-field.col-sm-6
            label Sünniaeg**
            input(type="text")
    .row
        .form-field.col-sm-6
            label Kodakondsus
            select
                option(default) -- valige kodakontsus --
                option Eesti
                option Soome
                option Läti
                option Leedu
        .form-field.col-sm-6
            label Maakond
            select
                option(default) -- valige maakond --
                option Harjumaa
                option Läänemaa
                option Ida-Virumaa
                option Lääne-Virumaa
    .row
        .form-field.col-sm-10
            label Aadress
            input(type="text" placeholder="Linn tänav maja nr./korteri nr.") 
        .form-field.col-sm-2
            label Sihtnumber
            input(type="text") 

    .row
        .form-field.col-sm-6
            label E-post
            input(type="text") 
        .form-field.col-sm-6
            label Telefon*
            input(type="text")
    .row
        .form-field.col-sm-12
            label Lisa märkused (kontakteerumisviisi eelistus, kontakteerumise aeg jm.)
            textarea
    .row
        .form-field.col-sm-12
            include checkbox
            span.terms Kannatanu on juriidiline isik
