.container
    h3.form-title SÜNDMUSE KIRJEDUS
    .row
        .form-field.col-sm-6
            label Sündmuse kuupäev*
            label.error-message(style="display: none") Kohustuslik
            input.datepicker(type="text" placeholder="pp.kk.aaaa").required-date#eventDate.validateDate
        .form-field.col-sm-6
            label Sündmuse kellaaeg
            input(type="text")#eventTime
    .row
        .form-field.col-sm-6
            label Sündmus toimus riigis*
            select#eventCountry
                option(default value="et") Eesti
                option(value="fn") Soome
                option(value="lt") Läti
                option(value="lv") Leedu

        .form-field.col-sm-6
            label Sündmus toimus maakonnas
            select#eventCounty
                option(default) -- valige maakond --
                option Harjumaa
                option Läänemaa
                option Ida-Virumaa
                option Lääne-Virumaa
    .row
        .form-field.col-sm-12
            label Sündmuse koht (nt aadress, park, kauplus, internet vms)*
            label.error-message(style="display: none") Kohustuslik
            input(type="text").required#eventPlace
    .row
        .form-field.col-sm-12
            label Sündmuse kirjeldus*
            label.error-message(style="display: none") Kohustuslik
            textarea.required#eventDescription
    .row(style="margin-top: 2px")
        .form-field.col-sm-12
            span.short Tekitatud varaline kahju:
            input.short(type="text")#proprietaryDamage.number
            span.short €
            label.error-message(style="display: none") Vigane number!
